<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/user.css" />
    <link rel="stylesheet" href="/css/themes.css" />
    <link rel="stylesheet" href="/css/forms.css" />
  </head>

  <body>
  <%- include('../includes/navigation.ejs') %>
    

  <main>
     <% if (results.length > 0) { %>
    <h1 class="themes-header">Result</h1>

    <div class="grid">
      <% results.forEach((result) => { %>
        <article class="card result-item">
            <header class="card-header">
                <h2 class="theme-title"><%= result.title %></h2>
            </header>

            <div class="card-content">
                <p class=""><%= result.entranceSong%></p>
            </div>

            <div class="card-content">
                <p class=""><%= result.first-reading%></p>
            </div>
            <div class="card-content">
                <p class=""><%= result.firstPsalm%></p>
            </div>

            <div class="card-content">
                <p class=""><%= result.second-reading%></p>
            </div>
            <div class="card-content">
                <p class=""><%= result.secondPsalm%></p>
            </div>

            <div class="card-content">
                <p class=""><%= result.third-reading%></p>
            </div>
            <div class="card-content">
                <p class=""><%= result.thirdPsalm%></p>
            </div>

            <div class="card-content">
                <p class=""><%= result.gospel-reading%></p>
            </div>
            <div class="card-content">
                <p class=""><%= result.finalSong%></p>
            </div>
        </article>

      <% }) %>
    </div>
    <%- include('../includes/pagination.ejs') %>
    <% } else { %>
        <h1>No Results Found!</h1>
    <% } %> 
  </main>
    <%- include('../includes/end.ejs') %>

