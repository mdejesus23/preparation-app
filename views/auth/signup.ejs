<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } else if (successMessage) { %>
            <div class="user-message user-message--success"><%= successMessage %></div>
        <% } %>
        <form class="login-form" action="/signup" method="POST">
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input 
                    class="<%= validationErrors.find(err => err.path === 'email') ? 'invalid' : ''%>" 
                    type="email" 
                    name="email" 
                    id="email" 
                    value="<%= prevInput.email%>"
                >
            </div>

            <div class="form-control">
                <label for="username">Username</label>
                <input 
                    class="<%= validationErrors.find(err => err.path === 'username') ? 'invalid' : ''%>" 
                    type="username" 
                    name="username" 
                    id="username" 
                    value="<%= prevInput.username%>"
                >
            </div>

            <div class="form-control">
                <label for="password">Password</label>
                <input 
                    class="<%= validationErrors.find(err => err.path === 'password') ? 'invalid' : ''%>" 
                    type="password" 
                    name="password" 
                    id="password" 
                    value="<%= prevInput.password%>"
                >
            </div>
            
            <div class="form-control">
                <label for="confirmPassword">Confirm Password</label>
                <input
                    class="<%= validationErrors.find(err => err.path === 'confirmPassword') ? 'invalid' : ''%>" 
                    type="password" 
                    name="confirmPassword" 
                    id="confirmPassword" 
                    value="<%= 
                    prevInput.confirmPassword%>"
                >
            </div>
            <input type="hidden" name="csrfToken" value="<%= csrfToken%>" />
            <button class="btn" type="submit">Signup</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>


