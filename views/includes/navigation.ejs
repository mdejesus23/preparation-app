<div class="backdrop"></div>
<header class="main-header">
  <button id="side-menu-toggle">Menu</button>
  <nav class="main-header__nav">
    <ul class="main-header__item-list">
      <li class="main-header__item">
        <a class="<%= path === '/' ? 'active' : '' %>" href="/">Home</a>
      </li>
      <% if (isAuthenticated) { %>

      <li class="main-header__item">
        <a class="<%= path === '/themes' ? 'active' : '' %>" href="/themes"
          >All Themes</a
        >
      </li>

      <li class="main-header__item">
        <a
          class="<%= path === '/readings/result' ? 'active' : '' %>"
          href="/results"
          >Result</a
        >
      </li>

      <li class="main-header__item">
        <a
          class="<%= path === '/admin/add-themes' ? 'active' : '' %>"
          href="/admin/add-themes"
          >Add Themes
        </a>
      </li>
      <li class="main-header__item">
        <a
          class="<%= path === '/admin/themes' ? 'active' : '' %>"
          href="/admin/themes"
          >My themes
        </a>
      </li>
      <% } %>
    </ul>
    <!--login/logout-->
    <ul class="main-header__item-list">
      <% if (!isAuthenticated) { %>

      <li class="main-header__item">
        <a class="<%= path === '/login' ? 'active' : '' %>" href="/login"
          >Login</a
        >
      </li>
      <li class="main-header__item">
        <a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup"
          >Signup</a
        >
      </li>

      <% } else { %>
      <!-- if user authenticated -->
      <li class="main-header__item">
        <div class="username-container">
          <div class="user-icon-container">
            <img src="/images/user-icon.png" />
          </div>
          <p><%= username%></p>
        </div>
      </li>
      <li class="main-header__item">
        <form action="/logout" method="post">
          <input type="hidden" name="csrfToken" value="<%= csrfToken%>" />
          <button type="submit">Logout</button>
        </form>
      </li>
      <% } %>
    </ul>
  </nav>
</header>
<!--Mobile view navigation-->
<nav class="mobile-nav">
  <ul class="mobile-nav__item-list">
    <li class="mobile-nav__item">
      <a class="<%= path === '/' ? 'active' : '' %>" href="/">Home</a>
    </li>
    <% if (isAuthenticated) { %>

    <li class="mobile-nav__item">
      <a class="<%= path === '/themes' ? 'active' : '' %>" href="/themes"
        >Themes</a
      >
    </li>

    <li class="mobile-nav__item">
      <a
        class="<%= path === '/readings/result' ? 'active' : '' %>"
        href="/results"
        >Result</a
      >
    </li>
    <li class="mobile-nav__item">
      <a
        class="<%= path === '/admin/add-themes' ? 'active' : '' %>"
        href="/admin/add-themes"
        >Add Themes
      </a>
    </li>
    <li class="mobile-nav__item">
      <a
        class="<%= path === '/admin/themes' ? 'active' : '' %>"
        href="/admin/themes"
        >My themes
      </a>
    </li>
    <% } %> <% if (!isAuthenticated) { %>
    <li class="mobile-nav__item">
      <a class="<%= path === '/login' ? 'active' : '' %>" href="/login"
        >Login</a
      >
    </li>
    <li class="mobile-nav__item">
      <a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup"
        >Signup</a
      >
    </li>
    <% } else { %>

    <li class="mobile-nav__item">
      <form action="/logout" method="post">
        <input type="hidden" name="csrfToken" value="<%= csrfToken%>" />
        <button type="submit">Logout</button>
      </form>
    </li>
    <% } %>
  </ul>
</nav>
