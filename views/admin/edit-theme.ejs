<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css" />
<link rel="stylesheet" href="/css/themes.css" />
</head>

<body>
<%- include('../includes/navigation.ejs') %>

<main>
  <form
    class="themes-form"
    action="/admin/<% if (editing) { %>edit-theme<% } else { %>add-theme<% } %>"
    method="POST"
  >
  <div class="form-control">
    <label for="title">Theme</label>
    <input
      type="text"
      name="title"
      id="title"
      value="<% if (editing) { %><%= theme.title %><% } %>"
    />
  </div>

  <div class="form-control">
    <label for="imageUrl">Image Url</label>
    <input
      type="text"
      name="imageUrl"
      id="imageUrl"
      value="<% if (editing) { %><%= theme.imageUrl%><% } %>"
    />
  </div>

  <div class="form-control">
    <label for="description">Description</label>
    <textarea name="description" id="description" rows="5"><% if (editing) { %><%= theme.description%><% } %></textarea>
  </div>

  <% if (editing ) { %>
    <input type="hidden" value="<%= theme._id %>" name="themeId"/>
  <% } %>
    
    <button class="btn" type="submit">
      <% if (editing) { %>Update Theme<% } else { %>Add Theme <% } %>
    </button>
  </form>
</main>
<%- include('../includes/end.ejs') %>
</body>
